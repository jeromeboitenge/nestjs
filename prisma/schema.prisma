generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course[]
}

model Lectures {
  lectureId       String   @id @unique @default(uuid())
  lectureName     String
  lectureEmail    String   @unique
  lecturePassword String
  lecturePhone    String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  course Course[]
}

model Course {
  id        String    @id @default(uuid())
  studentId String    @unique
  lectureId String    @unique
  name      String
  code      String    @unique
  createAt  DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lecture   Lectures? @relation(fields: [lectureId], references: [lectureId])
  student   User?     @relation(fields: [studentId], references: [id])
}
